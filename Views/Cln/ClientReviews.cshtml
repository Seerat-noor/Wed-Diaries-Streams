@{
    ViewData["Title"] = "Client Reviews";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <title>@ViewData["Title"]</title>
    <style>
        html, body {
            height: 100%;
            margin: 0;
            font-family: 'Poppins', sans-serif;
            background: url('/images/08810817-9bac-4488-8e90-58c8a297dc71.jpg') no-repeat center center fixed;
            background-size: cover;
            color: #4d0039;
        }

        .page-wrapper {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .container {
            max-width: 800px;
            margin: auto;
            background-color: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(255, 105, 180, 0.2);
            flex: 1;
        }

        h2 {
            text-align: center;
            color: #d63384;
            margin-bottom: 20px;
        }

        .review {
            border-bottom: 1px solid #f3c2d3;
            padding: 15px 0;
        }

            .review:last-child {
                border-bottom: none;
            }

        .stars {
            color: #ff66b2;
        }

        .username {
            font-weight: bold;
            color: #cc0066;
        }

        .form-section {
            margin-top: 40px;
            text-align: center;
        }

        textarea {
            width: 100%;
            height: 100px;
            border-radius: 8px;
            border: 1px solid #ccc;
            padding: 10px;
            font-size: 16px;
        }

        select {
            padding: 10px;
            margin-top: 10px;
            font-size: 16px;
            border-radius: 8px;
            border: 1px solid #ccc;
        }

        .btn-submit,
        .btn-realtime,
        .btn-back {
            display: inline-block;
            margin-top: 20px;
            background-color: #ff66b2;
            color: white;
            padding: 12px 20px;
            font-size: 16px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-weight: bold;
            text-align: center;
            text-decoration: none;
        }

            .btn-submit:hover,
            .btn-realtime:hover,
            .btn-back:hover {
                background-color: #e055a0;
            }
    </style>
</head>
<body>
    <div class="page-wrapper">
        <div class="container">
            <h2>What Our Clients Say</h2>

            <!-- existing reviews -->
            <div class="review">
                <p class="username">— Ayesha R.</p>
                <p>"Amazing service, loved every detail!"</p>
                <div class="stars">★★★★★</div>
            </div>

            <div class="review">
                <p class="username">— Hassan M.</p>
                <p>"Very professional and friendly team."</p>
                <div class="stars">★★★★☆</div>
            </div>

            <div class="review">
                <p class="username">— Fatima K.</p>
                <p>"The decorations were beautiful and exactly what I imagined."</p>
                <div class="stars">★★★★★</div>
            </div>

            <div class="review">
                <p class="username">— Ali T.</p>
                <p>"Good experience overall. Could improve timing."</p>
                <div class="stars">★★★☆☆</div>
            </div>

            <div class="form-section">
                <a href="/Chat/Index" class="btn-realtime">RealtimeComm</a>
            </div>
        </div>
    </div>
</body>
