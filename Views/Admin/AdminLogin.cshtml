@{
    ViewData["Title"] = "AdminLogin";
}

<style>
    body {
        margin: 0;
        font-family: 'Poppins', sans-serif;
        background: url('/images/08810817-9bac-4488-8e90-58c8a297dc71.jpg') no-repeat center center fixed;
        background-size: cover;
        color: #4d0039;
    }

    .login-container {
        max-width: 400px;
        margin: 80px auto;
        background-color: #fff0f5;
        border-radius: 20px;
        padding: 30px;
        box-shadow: 0 10px 25px rgba(214, 51, 132, 0.2);
    }

    .login-title {
        text-align: center;
        font-size: 28px;
        color: #d63384;
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    label {
        color: #d63384;
        font-weight: 500;
    }

    input.form-control {
        border: 1px solid #f9c5d1;
        border-radius: 8px;
        padding: 10px;
    }

    .btn-pink {
        background-color: #d63384;
        border: none;
        color: white;
        padding: 10px;
        width: 100%;
        border-radius: 8px;
        font-weight: bold;
        transition: 0.3s ease;
    }

        .btn-pink:hover {
            background-color: #c2185b;
        }

    .text-danger {
        font-size: 0.9em;
        color: red;
    }
</style>

<div class="login-container">
    <h2 class="login-title">Login to Your Account </h2>

    <form asp-controller="Admin" asp-action="AdminLogin" method="post">
        <div class="form-group">
            <label for="username">Email</label>
            <input type="username" class="form-control" id="username" name="Username" required />
        </div>

        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control" id="password" name="Password" required />
        </div>

        <div class="form-group form-check mb-3">
            <input type="checkbox" class="form-check-input" id="rememberMe" name="RememberMe" />
            <label class="form-check-label" for="rememberMe">Remember Me</label>
        </div>

        <button type="submit" class="btn btn-pink">Log In</button>
    </form>
</div>
