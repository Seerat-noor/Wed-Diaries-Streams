@{
    ViewData["Title"] = "StatusReq";
}

<style>
    body {
        margin: 0;
        font-family: 'Poppins', sans-serif;
        background: url('/images/08810817-9bac-4488-8e90-58c8a297dc71.jpg') no-repeat center center fixed;
        background-size: cover;
        color: #4d0039;
    }

    .form-container {
        max-width: 600px;
        margin: 80px auto;
        padding: 40px;
        background-color: #fff0f5;
        box-shadow: 0 0 15px rgba(255, 105, 180, 0.3);
        border-radius: 10px;
    }

    h2 {
        text-align: center;
        color: #d63384;
        margin-bottom: 30px;
    }

    label {
        font-weight: bold;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        width: 100%;
        padding: 12px;
        border: 1px solid #ccc;
        border-radius: 6px;
    }

    .btn-submit {
        display: block;
        width: 100%;
        background-color: #ff69b4;
        color: white;
        padding: 12px;
        font-size: 16px;
        font-weight: bold;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .btn-submit:hover {
            background-color: #d63384;
        }
</style>

<div class="form-container">
    <h2>Check Your Request Status</h2>

    <form asp-action="GetCustomer" method="post">
        <div class="form-group">
            <label for="FullName">Full Name</label>
            <input type="text" name="fullName" class="form-control" required />
        </div>

        <div class="form-group">
            <label for="PhoneNumber">Phone Number (/code)</label>
            <input type="text" name="phoneNumber" class="form-control" required />
        </div>

        <button type="submit" class="btn-submit">Check Status</button>
    </form>
</div>
