@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Admin Dashboard - WedDiaries</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        

        body {
            margin: 0;
            font-family: 'Poppins', sans-serif;
            background: url('/images/08810817-9bac-4488-8e90-58c8a297dc71.jpg') no-repeat center center fixed;
            background-size: cover;
            color: #4d0039;
        }


        .overlay {
            background: url('/images/download (3).jpg') no-repeat center center fixed;
            position: fixed;
            top: 0;
            left: 220px;
            right: 0;
            bottom: 0;
            z-index: 0;
        }

        /* Sidebar */
        .sidebar {
            height: 100vh;
            width: 220px;
            position: fixed;
            top: 0;
            left: 0;
            background: linear-gradient(180deg, #f8c5d7, #ffe0ec);
            padding-top: 60px;
            box-shadow: 2px 0 5px rgba(0,0,0,0.1);
            z-index: 2;
        }

            .sidebar a {
                display: block;
                padding: 15px 20px;
                text-decoration: none;
                color: #800040;
                font-weight: 500;
                transition: 0.3s;
            }

                .sidebar a:hover {
                    background-color: #f2a9c2;
                    color: white;
                    border-radius: 0 20px 20px 0;
                }

        /* top Navbar */
        .top-navbar {
            position: fixed;
            left: 220px;
            right: 0;
            height: 60px;
            background-color: #ffe0ec;
            display: flex;
            align-items: center;
            justify-content: flex-end;
            padding: 0 20px;
            box-shadow: 0px 2px 5px rgba(0,0,0,0.1);
            z-index: 2;
        }

            .top-navbar a {
                margin-left: 15px;
                background-color: #d63384;
                color: white;
                padding: 10px 18px;
                border-radius: 25px;
                text-decoration: none;
                font-weight: 500;
                transition: background 0.3s;
            }

                .top-navbar a:hover {
                    background-color: #a61c5c;
                }

        /* Main content */
        .main-content {
            margin-left: 220px;
            margin-top: 60px;
            padding: 30px;
            position: relative;
            z-index: 3;
        }

        h2 {
            color: #800040;
            font-family: 'Parisienne', cursive;
            font-size: 3rem;
            text-shadow: 2px 2px 4px #ffccd5;
        }

        .main-content p {
            background-color: rgba(255, 255, 255, 0.7);
            padding: 15px 20px;
            border-left: 5px solid #d63384;
            border-radius: 10px;
            font-size: 1.1rem;
            color: #5c0030;
            box-shadow: 0 2px 6px rgba(0,0,0,0.1);
        }

    </style>
</head>
<body>

    <!-- Sidebar -->
    <div class="sidebar">
        <a href="@Url.Action("Planning", "Setup")">Planning</a>
        <a href="@Url.Action("Ideas", "Setup")">Ideas</a>
        <a href="@Url.Action("Vendors", "Setup")">Vendors</a>
        <a href="@Url.Action("AboutUs", "Setup")">About Us</a>
        <a href="@Url.Action("Index", "Chat")">Chat</a>
        <a href="@Url.Action("Requests", "Admin")">View Requests</a>
    </div>

    <!-- Overlay -->
    <div class="overlay"></div>

    <!-- TopNavbar -->
    <div class="top-navbar">
        
        
    </div>

    <!-- content -->
    <div class="main-content">
        <h2>Welcome, Admin</h2>
        <p>
            Welcome Admin!  manage planning tasks, vendor details, user ideas, and chat with your clients — all in a lovely pink atmosphere.
        </p>
        <p1>
            (Hint: Head to sidebar for your major tasks )
        </p1>
    </div>

    <!-- Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
