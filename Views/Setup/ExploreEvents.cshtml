@{
    ViewData["Title"] = "Explore Events";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Explore Events - WedDiaries & Streams</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        /*  */
        body {
            margin: 0;
            font-family: 'Poppins', sans-serif;
            background: url('/images/08810817-9bac-4488-8e90-58c8a297dc71.jpg') no-repeat center center fixed;
            background-size: cover;
            color: #4d0039;
        }

        /* For the header section pretty */
        .event-header {
            background-color: #ff4081;
            color: white;
            padding: 50px 0;
            text-align: center;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(255, 64, 129, 0.3);
        }

        /* Event Card Styles – Like little pink fairytales! 🎉 */
        .event-card {
            border: 2px solid #ff4081;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 6px 15px rgba(255, 64, 129, 0.4);
            background-color: #ffffff;
            margin-bottom: 30px;
            transition: transform 0.3s ease-in-out;
        }

            .event-card:hover {
                transform: scale(1.05); /* zooming in  ! ✨ */
            }

            /* Event Image  */
            .event-card img {
                width: 100%;
                height: 300px;
                object-fit: cover;
            }

        /* Event Title & Description  */
        .event-title {
            font-size: 1.5rem;
            font-weight: bold;
            color: #ff4081;
            margin: 20px 0;
        }

        .event-description {
            font-size: 1.1rem;
            color: #6a1b4d;
            padding: 10px 15px;
        }

        /* Section Styling for Fun! */
        .section-title {
            text-align: center;
            color: #ff4081;
            font-size: 2rem;
            margin-bottom: 30px;
        }

        /* Section Bottoe */
        .event-container {
            padding-bottom: 40px;
        }

    </style>
</head>
<body>

    <!-- Heading for the Exploreeve -->
    <div class="event-header">
        <h1 class="display-4">Explore Our Stunning Events</h1>
        <p class="lead">Here are some of our top wedding events. From classical elegance to the beauty of destination weddings, we bring your dreams to life!</p>
    </div>

    <div class="container event-container">
        <div class="section-title">
            <h2>Our Recent Weddings</h2>
        </div>

        <!--Weddingevent Card -->
        <div class="row">
            <div class="col-md-4">
                <div class="event-card">

                    <div class="event-info">
                        <h3 class="event-title">Classical Wedding Elegance</h3>
                        <p class="event-description">A timeless celebration of love and tradition. Our classical wedding theme blends elegance with the charm of classic beauty, perfect for couples who appreciate tradition.</p>
                    </div>
                </div>
            </div>

            <!--  Wedding Event Card -->
            <div class="col-md-4">
                <div class="event-card">
                    <img src="https://via.placeholder.com/600x300?text=Elegant+Wedding" alt="Elegant Wedding">
                    <div class="event-info">
                        <h3 class="event-title">Elegant & Chic Celebration</h3>
                        <p class="event-description">For those who love to shine in sophistication. Our elegant wedding theme is designed to make your special day a beautiful affair with refined tastes and luxurious details.</p>
                    </div>
                </div>
            </div>

            <!-- Wedding Event Card -->
            <div class="col-md-4">
                <div class="event-card">
                    <img src="https://via.placeholder.com/600x300?text=Destination+Wedding" alt="Destination Wedding">
                    <div class="event-info">
                        <h3 class="event-title">Destination Wedding Bliss</h3>
                        <p class="event-description">Escape to a breathtaking destination to say your vows! Our destination wedding package offers the ultimate getaway for couples looking to tie the knot in paradise.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer Section with some more pinkness 🎀 -->
    <footer class="text-center mt-5">
        <p class="text-muted">WedDiaries & Streams | All Rights Reserved</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
