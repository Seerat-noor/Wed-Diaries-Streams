@{
    ViewData["Title"] = "About Us";
}

<title>@ViewData["Title"] - DIWeds&Diaries  </title>

<!-- link because code doesn't work without ref -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<head>
    <!-- Built-in styles -->
    <style>
        /* Bg and colorr*/
        body {
            margin: 0;
            font-family: 'Poppins', sans-serif;
            background: url('/images/08810817-9bac-4488-8e90-58c8a297dc71.jpg') no-repeat center center fixed;
            background-size: cover;
            color: #4d0039;
        }
        /* Navbar Styling */
        .navbar {
            background-color: antiquewhite;
            box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
        }

        .navbar-brand {
            font-weight: bold;
            font-size: 1.5rem;
            color: #800040;
        }

        .nav-link {
            color: #800040 !important; /* Text color for the links */
        }

        /* About Us Section */
        .about-us-section {
            padding: 60px 0;
        }

        .team-member-card {
            border: 1px solid #e0d4d9;
            border-radius: 10px;
            overflow: hidden;
            background-color: white;
            transition: transform 0.3s ease, box-shadow 0.3s ease; /* Smooth hover efact */
        }

            .team-member-card:hover {
                transform: translateY(-10px);
                box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
            }

        .team-member-image img {
            width: 100%; /* Make the image fi*/
            height: 100%;
            object-fit: cover;
        }

        .team-member-info {
            padding: 20px;
        }

            .team-member-info h3 {
                color: #800040;
                font-weight: bold;
            }

            .team-member-info p {
                font-size: 1rem;
                color: #800040;
            }

            .team-member-info .role {
                font-weight: bold; /* Bold role names for clarity */
                color: #800040;
            }

        /* Responsive Design for smaller screens */
        @@media (max-width: 768px) {
            .team-member-card {
                margin-bottom: 20px;
            }
        }
    </style>
</head>

<body>

    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
            <a class="navbar-brand" href="#">WedDiaries & Streams</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <!-- Planning & Logistics button -->
                    <li class="nav-item">
                        <a class="btn btn-light me-2" href="@Url.Action("Planning", "Setup")">Planning & Logistics</a>
                    </li>
                    <!-- Ideas & Inspiration button -->
                    <li class="nav-item">
                        <a class="btn btn-light me-2" href="@Url.Action("Ideas", "Setup")">Ideas & Inspiration</a>
                    </li>
                    <!-- Vendors button -->
                    <li class="nav-item">
                        <a class="btn btn-light me-2" href="@Url.Action("Vendors", "Setup")">Vendors</a>
                    </li>
                    <!-- About Us button -->
                    <li class="nav-item">
                        <a class="btn btn-light" href="@Url.Action("AboutUs", "Setup")">About Us</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- About Us Section -->
    <section class="about-us-section text-center">
        <div class="container">
            <h2 class="mb-5" style="color: #800040;">Meet Our Team</h2>

            <div class="row">
                <!-- Chairman Profile -->
                <div class="col-md-4 mb-4">
                    <div class="team-member-card">
                        <div class="team-member-image">
                        </div>
                        <div class="team-member-info">
                            <h3>Seerat Hayat</h3> <!-- Chairman Name -->
                            <p class="role">Chairman</p>
                            <p>Seerat has an incredible passion for weddings and has dedicated her career to helping couples create their dream weddings. With her years of experience and leadership, she is at the helm of our team, ensuring every wedding is a masterpiece.</p> <!-- Description of the Chairman -->
                        </div>
                    </div>
                </div>

                <!-- Stockholder 1 Pro -->
                <div class="col-md-4 mb-4">
                    <div class="team-member-card">
                        <div class="team-member-image">
                        </div>
                        <div class="team-member-info">
                            <h3>Serene</h3> <!-- Stockholder Name 1 -->
                            <p class="role">Stockholder</p> <!-- Role of Stockholder 1 -->
                            <p>Serene is our marketing genius. She brings creative ideas to life and ensures that WedDiaries & Streams continues to be a leading name in wedding planning. She’s dedicated to helping couples find exactly what they need!</p> <!-- Description of Stockholder 1 -->
                        </div>
                    </div>
                </div>

                <!-- Stockholder 2 Prof -->
                <div class="col-md-4 mb-4">
                    <div class="team-member-card">
                        <div class="team-member-image">
                        </div>
                        <div class="team-member-info">
                            <h3>Ali</h3>
                            <p class="role">Stockholder</p>
                            <p>Ali is the mastermind behind all things finance. With his sharp analytical skills, he ensures WedDiaries & Streams remains financially sound, while also helping couples stay within budget for their dream weddings.</p> <!-- Description of Stockholder 2 -->
                        </div>
                    </div>
                </div>
            </div>

            <!-- TeamIntro -->
            <h3 class="mt-5" style="color: #800040;">The Team Behind WedDiaries & Streams</h3>
            <p class="mt-3" style="font-size: 1.1rem; color: #800040;">We are a diverse team of passionate individuals who believe in making your wedding day dreams come true. Our experts work tirelessly to bring your vision to life, making each celebration unforgettable.</p>
        </div>
    </section>

    <!-- Bootstrap JS link added because code won't run without ref -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
