@{
    ViewData["Title"] = "Luxury Wedding Packages";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Luxury Wedding Packages - WedDiaries & Streams</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        /*  pic  */
        body {
            margin: 0;
            font-family: 'Poppins', sans-serif;
            background: url('/images/08810817-9bac-4488-8e90-58c8a297dc71.jpg') no-repeat center center fixed;
            background-size: cover;
            color: #4d0039;
        }

        .luxury-header {
            background-color: #f06292;
            color: white;
            text-align: center;
            padding: 50px 0;
            border-radius: 15px;
            box-shadow: 0 10px 15px rgba(244, 98, 146, 0.3);
        }

        /* Luxury card style */
        .luxury-card {
            border: 2px solid #f06292;
            border-radius: 15px;
            box-shadow: 0 6px 15px rgba(244, 98, 146, 0.4);
            background-color: #ffffff;
            margin-bottom: 30px;
            padding: 20px;
            transition: transform 0.3s ease-in-out;
        }

            .luxury-card:hover {
                transform: scale(1.05);
            }

            .luxury-card img {
                width: 100%;
                height: 250px;
                object-fit: cover;
                border-radius: 10px;
            }

        font-size: 1.7rem;
        color: #f06292;
        font-weight: bold;
        margin-top: 15px;
        }

        .event-price {
            font-size: 1.3rem;
            color: #d32f2f;
            font-weight: bold;
            margin-top: 10px;
        }

        .event-description {
            font-size: 1.1rem;
            color: #880e4f;
            margin-top: 10px;
        }

        .section-title {
            text-align: center;
            color: #f06292;
            font-size: 2rem;
            margin-bottom: 40px;
        }

        .luxury-container {
            padding-bottom: 50px;
        }

        /*  registerNow Button */
        .btn-custom {
            background-color: #e91e63;
            color: white;
            font-size: 1.25rem;
            font-weight: bold;
            padding: 15px 30px;
            border-radius: 10px;
            border: none;
            transition: background-color 0.3s ease-in-out, transform 0.3s ease-in-out;
        }

            .btn-custom:hover {
                background-color: #c2185b;
                transform: scale(1.05);
            }

    </style>
</head>
<body>

    <div class="luxury-header">
        <h1 class="display-4">Luxury Wedding Packages</h1>
        <p class="lead">Exclusive packages for the most unforgettable wedding experiences.</p>
    </div>

    <div class="container luxury-container">
        <div class="section-title">
            <h2>Our Premium Packages</h2>
            <p>Choose from our top-tier wedding events and make your big day as magical as possible!</p>
        </div>

        <!-- The Henna Night -->
        <div class="row">
            <div class="col-md-4">
                <div class="luxury-card">
                    <div class="event-info">
                        <h3 class="event-title">The Henna Night</h3>
                        <p class="event-price">Price: per head 2000 (discounted)</p>
                        <p class="event-description">
                            Enjoy an intimate evening filled with tradition, music, and celebration before the big day. Our Henna Night includes beautiful decor, traditional henna artists, and vibrant food offerings.
                            <br><br>
                            <strong>What's Included:</strong><br>
                            - Traditional Henna Art<br>
                            - Authentic Middle Eastern Food Buffet<br>
                            - Gorgeous Floral and Themed Decor<br>
                            - Live Music and Dance Performance
                        </p>
                    </div>
                </div>
            </div>

            <!-- The Big Day -->
            <div class="col-md-4">
                <div class="luxury-card">
                    <div class="event-info">
                        <h3 class="event-title">The Big Day</h3>
                        <p class="event-price">Price: per head 2200 (discounted)</p>
                        <p class="event-description">
                            The day you’ve always dreamed of! A spectacular wedding setup, gorgeous floral arrangements, and a grand reception that will take your breath away. Let us turn your vision into reality.
                            <br><br>
                            <strong>What's Included:</strong><br>
                            - Full Wedding Ceremony Setup with Flowers & Chairs<br>
                            - Premium Food Buffet (3-Course)<br>
                            - Wedding Cake & Dessert Station<br>
                            - Professional Photographer and Videographer
                        </p>
                    </div>
                </div>
            </div>

            <!-- The Reception Event -->
            <div class="col-md-4">
                <div class="luxury-card">
                    <div class="event-info">
                        <h3 class="event-title">The Reception Event</h3>
                        <p class="event-price">Price: per head 2500 (discounted)</p>
                        <p class="event-description">
                            After the ceremony, let’s celebrate! Our reception package includes a stylish venue with glamorous decor, exquisite food, and entertainment to keep your guests dancing all night.
                            <br><br>
                            <strong>What's Included:</strong><br>
                            - Luxury Reception Venue with Stunning Decorations<br>
                            - 5-Course Meal and Drinks Package<br>
                            - Entertainment (Live Band or DJ)<br>
                            - Full-Service Waitstaff and Event Coordination
                        </p>
                    </div>
                </div>
            </div>
        </div>


    </div>
    <div class="text-center mt-4">
        <a href="/Setup/Register" class="btn btn-custom">Register Now</a>
    </div>

    <footer class="text-center mt-5">
        <p class="text-muted">WedDiaries & Streams | All Rights Reserved | Contact Us: +123 456 7890</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
