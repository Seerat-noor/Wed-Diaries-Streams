@{
    ViewData["Title"] = "Wedding Registration";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Wedding Registration</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            margin: 0;
            font-family: 'Poppins', sans-serif;
            background: url('/images/94f3590c-bbf6-4558-9ee3-ee964f387496.jpg') no-repeat center center fixed;
            background-size: cover;
            color: #4d0039;
        }

        .register-header {
            background-color: #f06292;
            color: white;
            text-align: center;
            padding: 40px 0;
            border-radius: 10px;
            box-shadow: 0 10px 15px rgba(244, 98, 146, 0.3);
        }

        .register-form {
            background-color: white;
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 6px 15px rgba(244, 98, 146, 0.4);
        }

        .form-title {
            color: #f06292;
            font-size: 2rem;
            margin-bottom: 20px;
        }

        .form-group label {
            font-size: 1.1rem;
        }

        .form-group input,
        .form-group select,
        .form-group textarea {
            border-radius: 10px;
            border: 2px solid #f06292;
            padding: 10px;
            width: 100%;
            font-size: 1rem;
            margin-top: 10px;
        }

        .form-group textarea {
            height: 100px;
        }

        .submit-btn {
            background-color: #f06292;
            color: white;
            font-size: 1.2rem;
            padding: 12px 30px;
            border-radius: 25px;
            width: 100%;
            border: none;
            transition: 0.3s;
        }

            .submit-btn:hover {
                background-color: #e60073;
            }

        .discount-note {
            font-size: 0.9rem;
            color: #880e4f;
            margin-top: 10px;
        }

        .section-header {
            color: #ad1457;
            font-size: 1.5rem;
            margin-top: 40px;
            margin-bottom: 20px;
            font-weight: bold;
        }

        .border-pink {
            border-color: #f06292 !important;
        }
    </style>
</head>
<body>

    <!-- header -->
    <div class="register-header">
        <h1 class="display-4">Wedding Registration Form</h1>
        <p class="lead">Tell us more about your dream wedding!</p>
    </div>

    <!-- registration form -->
    <div class="container mt-5">
        <div class="register-form">
            <form action="/Client/RegClientEvent" method="post">

                <!-- client information -->
                <div class="section-header">Client Information</div>

                <div class="form-group">
                    <label for="fullName">Full Name</label>
                    <input type="text" id="fullName" name="fullName" class="form-control" required>
                </div>

                <div class="form-group mt-3">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" class="form-control" required>
                </div>

                <div class="form-group mt-3">
                    <label for="phoneNumber">Phone (/your custom code is preferred)</label>
                    <input type="text" id="phoneNumber" name="phoneNumber" class="form-control" required>
                </div>

                <div class="form-group mt-3">
                    <label for="address">Address</label>
                    <input type="text" id="address" name="address" class="form-control">
                </div>

                <!-- wdding details -->
                <div class="section-header">Wedding Details</div>

                <div class="form-group">
                    <label for="partnerName">Your Name</label>
                    <input type="text" id="partnerName" name="partnerName" class="form-control" required>
                </div>

                <div class="form-group mt-3">
                    <label for="partnerName2">Partner's Name</label>
                    <input type="text" id="partnerName2" name="partnerName2" class="form-control" required>
                </div>

                <div class="form-group mt-3">
                    <label for="eventDate">Event Date</label>
                    <input type="date" id="eventDate" name="eventDate" class="form-control" required>
                </div>

                <div class="form-group mt-3">
                    <label for="venue">Venue</label>
                    <input type="text" id="venue" name="venue" class="form-control">
                </div>

                <div class="form-group mt-3">
                    <label for="Guests">Number of Guests</label>
                    <input type="number" id="Guests" name="Guests" class="form-control" required>
                </div>

                <div class="form-group mt-3">
                    <label for="budget">Estimated Budget (USD)</label>
                    <input type="number" id="budget" name="budget" class="form-control" step="0.01">
                </div>

                <div class="form-group mt-3">
                    <label for="theme">Wedding Theme</label>
                    <select id="theme" name="theme" class="form-control">
                        <option value="">-- Select Theme --</option>
                        <option value="Classic">Classic</option>
                        <option value="Rustic">Rustic</option>
                        <option value="Modern">Modern</option>
                        <option value="Beach">Beach</option>
                    </select>
                </div>

                <!-- budget toologgle -->
                <div class="form-group mt-4">
                    <div class="d-flex align-items-center justify-content-start bg-light p-3 rounded border border-2 border-pink">
                        <div class="form-check form-switch me-3">
                            <input class="form-check-input" type="checkbox" id="budgetToolToggle" name="budgetToolToggle" required style="transform: scale(1.5);">
                        </div>
                        <div>
                            <label class="form-check-label fw-semibold text-dark fs-5" for="budgetToolToggle">
                                Enable Budget Calculating Tool
                            </label>
                            <div class="text-muted fst-italic">Enable it to calculate budget so you don't have to!</div>
                        </div>
                    </div>
                </div>

                <!-- services note -->
                <div class="form-group mt-4">
                    <p class="text-danger fw-bold">
                        (The services below are exempted from deals, since they're enhancements and with additional charges mutually consented by client and our team. Though, would be added later)
                    </p>
                </div>


                <div class="form-group mt-3">
                    <label>Catering Required?</label>
                    <select name="catering" class="form-control">
                        <option value="true">Yes</option>
                        <option value="false">No</option>
                    </select>
                </div>

                <div class="form-group mt-3">
                    <label>Decoration Required?</label>
                    <select name="decoration" class="form-control">
                        <option value="true">Yes</option>
                        <option value="false">No</option>
                    </select>
                </div>

                <div class="form-group mt-3">
                    <label>Entertainment Required?</label>
                    <select name="entertainment" class="form-control">
                        <option value="true">Yes</option>
                        <option value="false">No</option>
                    </select>
                </div>
                <div class="form-group mt-3">
                    <label for="Type">Deal Type</label>
                    <select id="Type" name="Type" class="form-control" required>
                        <option value="">-- Select Deal Type --</option>
                        <option value="Standard">Standard</option>
                        <option value="Luxury">Luxury</option>
                    </select>
                </div>


                <!-- requests -->
                <div class="section-header">Special Requests</div>

                <div class="form-group mt-3">
                    <label for="custom">Your Preferences (Optional)</label>
                    <textarea id="custom" name="custom" class="form-control" placeholder="Enter any specific preferences or requests for your wedding"></textarea>
                </div>

                <!--  code -->
                

                <!-- submit -->
                <button type="submit" class="submit-btn mt-4">Submit Your Registration</button>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
